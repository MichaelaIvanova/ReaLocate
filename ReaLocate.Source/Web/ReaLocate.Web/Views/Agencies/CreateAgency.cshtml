                @Html.EditorFor(model => model.PaymentDetails.VatNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PaymentDetails.VatNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HasPackage, htmlAttributes: new { @class = "control-label col-md-2" })
