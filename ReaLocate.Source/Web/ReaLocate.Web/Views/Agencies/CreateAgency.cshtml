                @Html.CheckBoxFor(model => model.HasPackage, new { htmlAttributes = new { @class = "checkbox checkbox-success" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
